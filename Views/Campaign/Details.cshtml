@model DM_helper.Models.Campaign

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1>@Model.Name</h1>
        </div>
        <div class="col-6">
            <div>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <h5>Notes</h5>
            @using (Html.BeginForm("CreateNewNote", "Notes"))
            {
                <input type="hidden" id="CampaignID" name="CampaignID" value="@Model.ID" hidden />
                <input type="submit" class="btn btn-primary" value="Create Note" />
            }
            <div style="height:1rem;"></div>
            <div class="flex-row flex-wrap">
                @foreach (var item in Model.Notes)
                {
                    <div class="card">
                        <div class="card-header">
                            @item.Timestamp
                        </div>
                        <div class="card-body">
                            @item.NoteText
                            <a asp-action="Edit" asp-controller="Notes" asp-route-id="@item.ID">Edit</a>
                        </div>
                    </div>
                    <div style="height:1rem;"></div>
                }
            </div>
        </div>
        <div class="col-9">
            <h5>Sessions</h5>
            @using (Html.BeginForm("CreateBlankSession", "Session"))
            {
                <input type="hidden" id="CampaignID" name="CampaignID" value="@Model.ID" hidden />
                <input type="submit" class="btn btn-primary" value="Create Session" />
            }
            <div style="height:1rem;"></div>
            <div class="flex-row flex-wrap">
                @foreach (var item in Model.Sessions)
                {
                    <div class="card">
                        <div class="card-header">
                            @item.Name
                        </div>
                        <div class="card-body">
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Session" asp-route-id="@item.ID">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Session" asp-route-id="@item.ID">Details</a>
                        </div>
                    </div>
                    <div style="height:1rem;"></div>
                }
            </div>
        </div>
    </div>
</div>
