@model IEnumerable<DM_helper.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Background)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Homeworld)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentSystemStrain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSystemStrain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermanentStrain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentXP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XPTilNextLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AtkBonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dexterity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Constitution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intelligence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wisdom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charisma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Background.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Homeworld)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSystemStrain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSystemStrain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermanentStrain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentXP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XPTilNextLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AtkBonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dexterity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Constitution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intelligence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wisdom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Charisma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
